mixin sProdCard(data)
	// start sProdCard
	+b.SECTION.sProdCard(class=data.addClasses).section#sProdCard&attributes(attributes)
		.container
			if data.bgPage
				+e.bg
					img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
					+e.t-cont.container
						+e.t-white
			+breadcrumb('Главная', 'Каталог', 'Холодильник Toshiba GR-RT565RS(N)')
			+e.top-box
				+b.section-title
					h1 Холодильник Toshiba GR-RT565RS(N)
				+b.tags-row.row
					+sProdCardTag('t-messages', '0 отзывов')
					+sProdCardTag('t-heart', 'В избранное')
					+sProdCardTag('t-compare', 'Сравнить')
					+sProdCardTag('t-share', 'Поделиться')
				+e.t-row.row
					+e.slider-col.col-xl-auto
						+e.slider-wrap
							.swiper.sProdCard-slider-js
								.swiper-wrapper
									+sProdCardSlide(1)
									+sProdCardSlide(2)
									+sProdCardSlide(3)
									+sProdCardSlide(4)
						+e.thumb-wrap
							.swiper.sProdCard-thumb-js
								.swiper-wrapper
									+sProdCardThumb(1)
									+sProdCardThumb(2)
									+sProdCardThumb(3)
									+sProdCardThumb(4)
					//
					+e.char-col.col-xl-auto.col-md-5.d-none.d-md-block
						+sProdCardCharCol()
					+e.buy-col.col-xl.col-md-7
						+sProdCardBuyCol()
			+e.mid-box
				if data.bgPage
					+e.bg--mid
						img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
						+e.t-cont.container
							+e.t-white
				+middleContent()
	// end sProdCard

