mixin sProdCardTabsContent(tabName, imgNum, activeClasses='')
	+e.tabs-content.tabs__content(class=activeClasses)
		+e.dd-item
			+e.dd-head.d-sm-none.dd-head-js
				+e.dd-img
					img.img-svg-js(loading="lazy" src=`img/svg/footMobNavItem-${imgNum}.svg` alt="")
				span=tabName
			+e.dd-content.dd-content-js
				block


mixin middleContentTableItem(title, addTittleClass='')
	+e.ct-item
		//css class "big" can be removed
		+e.ct-title(class=addTittleClass)=title
		+e.ct-tr-wrap
			block

mixin middleContentTableRow(key, val)
	+e.ct-tr.row
		+e.ct-key.col.col-md-6.col-lg-5=key
		+e.ct-val.col-auto.col-md=val


mixin sProdCardPill(imgNum, key, val)
	+e.pill
		+e.p-row.row.align-items-center
			.col-auto
				+e.p-icon
					img(loading="lazy" src=`img/svg/sProdCard-pill-${imgNum}.svg` alt="")
			.col
				+e.SPAN.p-key=key
				+e.SPAN.p-val=val


mixin sProdCardChar(key, val)
	+e.char
		+e.SPAN.key=key
		+e.SPAN.val=val

mixin sProdCardTag(tagName, txt)
	.col-auto
		if txt == "Поделиться"
			+e.tag--share
				+e.share-toggle
					if tagName
						+e.icon
							img(loading="lazy" src=`img/svg/${tagName}.svg` alt="")
					span=txt
				+e.share-dropdown
					<script src="https://yastatic.net/share2/share.js"></script>
					<div class="ya-share2" data-curtain data-shape="round" data-services="messenger,vkontakte,facebook,odnoklassniki"></div>
		else
			+e.tag(href="#")
				if tagName
					+e.icon
						img(loading="lazy" src=`img/svg/${tagName}.svg` alt="")
				span=txt

mixin sProdCardSlide(imgNum)
	.swiper-slide
		+e.s-img(href=`img/@2x/sProdCard-slide-${imgNum}.png` data-fancybox='sProdCardSlide')
			img(loading="lazy" src=`img/@2x/sProdCard-slide-${imgNum}.png` alt="")

mixin sProdCardThumb(imgNum)
	.swiper-slide
		img(loading="lazy" src=`img/@2x/sProdCard-slide-${imgNum}.png` alt="")


