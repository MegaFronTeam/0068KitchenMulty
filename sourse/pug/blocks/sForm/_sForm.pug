mixin sFormNews(data)
	// start sForm
	+b.SECTION.sForm--news.section&attributes(attributes)
		.container
			+e.box.bg-wrap
				+pic('dark-bg.png', 'bg', 0).picture-bg
				img.sForm__image(loading="lazy" src="img/svg/sFormNews.svg" alt="")
				.row
					.col-lg-7.col-xl
						+b.section-title
							h2=data.title
							p=data.descr
