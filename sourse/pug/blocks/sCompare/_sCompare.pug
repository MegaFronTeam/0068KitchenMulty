mixin sCompare(data)
	// start sCompare
	+b.SECTION.sCompare.section#sCompare&attributes(attributes)
		+e.bg
			img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
		.container
			+breadcrumb('Главная', 'Сравнение товаров')
			+b.section-title
				h1 Сравнение товаров
			+e.white-box
				+e.top-row.row.align-items-center
					.col
						+e.sub-title Товары
					.col-auto
						+e.clean-btn(href="#") Очистить список
				+e.main-row.row
					+e.col--chars.col-auto
						+e.c-title Общая информация
						+e.c-items
							+e.c-item.c-item-js Макс. загрузка
							+e.c-item.c-item-js Тип управления
							+e.c-item.c-item-js Тип загрузки
							+e.c-item.c-item-js Класс стирки
							+e.c-item.c-item-js Класс отжима
							+e.c-item.c-item-js Максимальная скорость отжима (об/мин)
							+e.c-item.c-item-js Регулируемая скорость отжима (об/мин)
						+e.c-title Функции и особенности
						+e.c-items
							+e.c-item.c-item-js Макс. загрузка
							+e.c-item.c-item-js Тип управления
							+e.c-item.c-item-js Тип загрузки
							+e.c-item.c-item-js Класс стирки
							+e.c-item.c-item-js Класс отжима
							+e.c-item.c-item-js Максимальная скорость отжима (об/мин)
							+e.c-item.c-item-js Регулируемая скорость отжима (об/мин)
						+e.c-title Габариты
						+e.c-items
							+e.c-item.c-item-js Макс. загрузка	
							+e.c-item.c-item-js Тип управления
							+e.c-item.c-item-js Тип загрузки 
							+e.c-item.c-item-js Класс стирки 
							+e.c-item.c-item-js Класс отжима 
							+e.c-item.c-item-js Максимальная скорость отжима (об/мин)
							+e.c-item.c-item-js Регулируемая скорость отжима (об/мин)
					+e.col--slider.col
						+e.main-slider
							.swiper.sCompare-main-slider-js
								.swiper-wrapper
									-for(var i=1; i <= 7; i++)
										+sCompareMainSlide({})
								.swiper-scrollbar
								+e.difference
									+b.custom-chb(href="#").active
										span.square
										span.txt Показывать только различия
	// end sCompare

