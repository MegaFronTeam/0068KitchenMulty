mixin sCompareSubSlide(data)
	.swiper-slide
		+b.compare-card--js
			+e.content
				+e.top-row.row.align-items-center.justify-content-end
					.col-auto
						+e.top-btn--like(href="#" class=data.likeBtnClasses)
							img(loading="lazy" src=`img/svg/sCompare-1.svg` alt="")
							img(loading="lazy" src=`img/svg/sCompare-1-active.svg` alt="")
					.col-auto
						+e.top-btn--trash(href="#")
							img(loading="lazy" src=`img/svg/sCompare-2.svg` alt="")
				+e.img(href="#")
					img(loading="lazy" src=`img/@2x/compare-slide-${data.imgNum}.png` alt="")
				+e.title(href="#")=data.title
				+e.price-row.row.align-items-center
					+e.price.col=data.price
					.col-auto
						+e.buy-btn(href="#")
							span Купить
			+e.controll-row.row.gx-0
				.col-auto
					+e.c-btn--prev.sub-slider-prev-js
						+icon('chevron-left')
				+e.number-col.col=`${data.slideNum} из 7`
				.col-auto
					+e.c-btn--next.sub-slider-next-js
						+icon('chevron-right')
		+e.slider-chars
			+e.slide-char.slide-char-js 6 кг
			+e.slide-char.slide-char-js электронное
