mixin sDelivery(data)
	// start sDelivery
	+b.sDelivery.section#sDelivery&attributes(attributes)
		.container
			.tabs
				+e.caption-row.tabs__caption.row
					.col-auto
						+e.tabs-btn.tabs__btn Способы доставки
					.col-auto
						+e.tabs-btn.tabs__btn.active Способы оплаты
				.tabs__wrap
					.tabs__content
						if block
							block
						else
							+delivery()
					.tabs__content.active
						+payment()
	// end sDelivery

