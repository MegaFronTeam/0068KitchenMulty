		+e.row.row
			.col-md
				+e.dd-items.payment-dd-items-js
					+paymentDDItem(2, 'Оплата при получении', 'active')
						ul
							li 
								strong Наличными
								br
								| оплата производится при получении заказа в месте доставки или в шоуруме #[strong KitchenMania]
							li 
								strong Картой курьеру
								br
								| оплата производится пластиковой картой при получении заказа в месте доставки или в шоуруме #[strong KitchenMania]

					+paymentDDItem(1, 'Оплаты онлайн', 'active')
						ul
							li 
								strong Картой онлайн
							li 
								strong 
									img(src="img/spb.png", alt="")
									| СПБ
						+b.alert-block.row
							.col-auto
								+e.circle
									img(src="img/svg/icon-attention.svg", alt="")
							.col
								+e.text Ссылка на оплату высылается только после согласования деталей заказа и подтверждения наличия товаров

					+paymentDDItem(4, 'Предоплата', 'active')
						ul
							li Картой онлайн
							li Картой или наличными в нашем шоуруме  #[strong KitchenMania]
					+paymentDDItem(5, 'Оплата частями', 'active')
						ul
							li 
								img(src="img/svg/sber.png", alt="")
								| Плати частями от Сбер
							li 
								img(src="img/svg/tin.png", alt="")
								| Оплата долями Тинькофф
							a(href="#") Подробнее об услуге 
					+paymentDDItem(6, 'Оплата по счету в банке', 'active')
						p Счет на оплату выставляется после согласования деталей заказа с менеджером.
						p Оплата доступна как для физических лиц, так и для юридических лиц.
			//- +paymentSliderCol()
		+e.form-cont
			+sFormAlt({
				title: 'Есть вопросы по поводу оплаты?',
				descr: 'Заполните форму обратной связи, мы перезвоним вам и ответим на все ваши вопросы',
			})

mixin paymentSliderCol()
	+b.slider-col.col-md-auto
		.swiper.payment-slider-js
			.swiper-wrapper
				-for (var i = 0; i < 3; i++)
					.swiper-slide
						+e.item
							+e.bg
								img(loading="lazy" src="img/@2x/payment-slider-1.jpg" alt="")
							+e.s-content
								+e.s-title Покупай в кредит!
								+e.s-descr В нашем магазине можно приобрести товары в рассрочку или кредит без первоначального взноса и переплат через Почта Банк.
								+e.s-btn(href='#') узнать подробнее
			.swiper-pagination

mixin paymentDDItem(imgNum, title, activeClasses='')
	+e.dd-item(class=activeClasses)
		+e.head.dd-head-js
			+e.h-row.row.align-items-center
				.col-auto
					+e.h-icon
						img.img-svg-js(  src=`img/svg/payment-item-${imgNum}.svg` alt="")
				.col
					+e.title=title
				.col-auto
					+e.chevron
						+icon('chevron-down')
		+e.content.dd-content-js(class=activeClasses)
			+b.pay-variant-content
				block