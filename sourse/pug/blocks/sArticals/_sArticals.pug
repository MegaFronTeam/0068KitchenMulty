mixin sArticals(data)
	// start sArticals
	+b.sArticals.section#sArticals&attributes(attributes)
		.container
			+e.row.row
				+sArticalsItem(1, 'Как правильно выбрать холодильник')
				+sArticalsItem(2, 'Миксеры: выбираем правильный')
				+sArticalsItem(3, 'Все о посудомоечной машину')
				+sArticalsItem(4, 'Как правильно выбрать мясорубку')
				+sArticalsItem(5, 'Как правильно выбрать холодильник')
				+sArticalsItem(1, 'Как правильно выбрать холодильник')
				+sArticalsItem(1, 'Как правильно выбрать холодильник')
				+sArticalsItem(2, 'Миксеры: выбираем правильный')
				+sArticalsItem(3, 'Все о посудомоечной машину')
				+sArticalsItem(4, 'Как правильно выбрать мясорубку')
				+sArticalsItem(5, 'Как правильно выбрать холодильник')
				+sArticalsItem(1, 'Как правильно выбрать холодильник')
